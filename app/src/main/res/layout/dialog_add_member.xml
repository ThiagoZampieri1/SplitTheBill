<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nome_do_integrante"
        android:inputType="text" />

    <EditText
        android:id="@+id/Item1EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/valor_pago"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/itemBought1EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/item_comprado_1"
        android:inputType="text" />

    <EditText
        android:id="@+id/Item2EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/valor_pago"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/itemBought2EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/item_comprado_2"
        android:inputType="text" />

    <EditText
        android:id="@+id/Item3EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/valor_pago"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/itemBought3EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/item_comprado_3"
        android:inputType="text" />



</LinearLayout>
